<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="my.mynato.rahmatridham.mynato.Absensi.RequestKoreksi">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/buttonSubmit">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/pengkor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:paddingBottom="5dp">

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:text="PENGAJUAN KOREKSI"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView11"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:text="Dengan ini kami mohon bantuan koreksi daftar hadir:" />

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView14"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="15dp"
                    android:text="Nama" />

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView15"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="15dp"
                    android:text="Nipeg" />

                <TextView
                    android:id="@+id/textView17"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView16"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="15dp"
                    android:text="Kantor" />

                <TextView
                    android:id="@+id/textView18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView17"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="15dp"
                    android:text="Atasan" />

                <TextView
                    android:id="@+id/textViewNamaPemohon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/textView15"
                    android:layout_alignBottom="@+id/textView15"
                    android:layout_alignLeft="@+id/textView15"
                    android:layout_marginStart="80dp"
                    android:layout_toEndOf="@+id/textView18"
                    android:layout_toRightOf="@+id/textView18"
                    android:text="TextView" />

                <TextView
                    android:id="@+id/textViewNipegPemohon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/textView16"
                    android:layout_alignBottom="@+id/textView16"
                    android:layout_alignLeft="@+id/textViewNamaPemohon"
                    android:layout_alignStart="@+id/textViewNamaPemohon"
                    android:layout_below="@+id/textViewNamaPemohon"
                    android:text="TextView" />

                <TextView
                    android:id="@+id/textViewKantorPemohon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/textView18"
                    android:layout_alignLeft="@+id/textViewNipegPemohon"
                    android:layout_alignStart="@+id/textViewNipegPemohon"
                    android:layout_alignTop="@+id/textView17"
                    android:text="TextView" />

                <TextView
                    android:id="@+id/textViewAtasanPemohon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/textViewKantorPemohon"
                    android:layout_alignStart="@+id/textViewKantorPemohon"
                    android:layout_alignTop="@+id/textView18"
                    android:text="TextView" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/alkor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/pengkor"
                android:layout_marginTop="10dp"
                android:paddingBottom="10dp">

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:text="ALASAN KOREKSI"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <RadioGroup
                    android:id="@+id/groupAlkor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/textView11"
                    android:layout_alignStart="@+id/textView11"
                    android:layout_below="@+id/textView11"
                    android:layout_marginTop="5dp">

                    <RadioButton
                        android:id="@+id/radioButtonUnitLuar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ACARA DI UNIT LUAR KANTOR KEDUDUKAN" />

                    <RadioButton
                        android:id="@+id/radioButtonMAB"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="MESIN ABSEN BERMASALAH" />

                </RadioGroup>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/TanggalDikoreksi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/buttonSubmit"
                android:layout_below="@+id/JamSeharusnya"
                android:layout_marginTop="5dp">

                <EditText
                    android:id="@+id/editTextTanggalKoreksi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/textView13"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignRight="@+id/textView13"
                    android:layout_alignTop="@+id/TanggalDikoreksi"
                    android:layout_below="@+id/textView13"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="3dp"
                    android:ems="10"
                    android:hint="dd/mm/yyyy"
                    android:inputType="none"
                    android:editable="false"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:text="TANGGAL DIKOREKSI"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/JamSeharusnya"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/alkor"
                android:layout_marginTop="5dp">

                <EditText
                    android:id="@+id/editTextKeluar"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/editTextMasuk"
                    android:layout_alignStart="@+id/editTextMasuk"
                    android:layout_below="@+id/editTextMasuk"
                    android:editable="false"
                    android:ems="10"
                    android:hint="hh:mm"
                    android:inputType="none"
                    android:textAlignment="center"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/editTextMasuk"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView4"
                    android:layout_marginLeft="14dp"
                    android:layout_marginStart="14dp"
                    android:layout_toEndOf="@+id/textView12"
                    android:layout_toRightOf="@+id/textView12"
                    android:editable="false"
                    android:ems="10"
                    android:hint="hh:mm"
                    android:inputType="none"
                    android:textAlignment="center"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:text="JAM SEHARUSNYA"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/textView12"
                    android:layout_alignStart="@+id/textView12"
                    android:layout_below="@+id/textView12"
                    android:layout_marginTop="20dp"
                    android:text="Keluar" />

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/textView4"
                    android:layout_alignStart="@+id/textView4"
                    android:layout_below="@+id/textView4"
                    android:layout_marginLeft="13dp"
                    android:layout_marginStart="13dp"
                    android:layout_marginTop="10dp"
                    android:text="Masuk" />
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>

    <Button
        android:id="@+id/buttonSubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="5dp"
        android:background="@color/greenButton"
        android:text="SUBMIT"
        android:textColor="@color/white"
        android:textStyle="normal|bold" />

</RelativeLayout>
