<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="my.mynato.rahmatridham.mynato.LandingPageMenus.Profile">

    <!-- TODO: Update blank fragment layout -->

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/circularImageView"
                android:layout_toEndOf="@+id/circularImageView">

                <TextView
                    android:id="@+id/NamaProfil"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Nama Lengkap"
                    android:textColor="@android:color/holo_blue_bright"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/JabatanProfil"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/NamaProfil"
                    android:layout_alignStart="@+id/NamaProfil"
                    android:layout_below="@+id/NamaProfil"
                    android:layout_marginTop="2dp"
                    android:text="Jabatan"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/kantorProfil"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/JabatanProfil"
                    android:layout_alignStart="@+id/JabatanProfil"
                    android:layout_below="@+id/JabatanProfil"
                    android:layout_marginTop="2dp"
                    android:text="KANTOR WILAYAH"
                    android:textSize="13sp" />

            </LinearLayout>

            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/circularImageView"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/icon_profile_active"
                app:civ_border_color="#EEEEEE"
                app:civ_border_width="4dp"
                app:civ_shadow="true"
                app:civ_shadow_color="@android:color/holo_blue_bright"
                app:civ_shadow_radius="20" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</FrameLayout>
