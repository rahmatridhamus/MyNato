<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.rahmatridham.mynato.FragmentsLandingPages.Profile">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.mikhaellopez.circularimageview.CircularImageView
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:src="@mipmap/ic_launcher"
            app:civ_border_color="#EEEEEE"
            app:civ_border_width="4dp"
            app:civ_shadow="true"
            app:civ_shadow_radius="20"
            app:civ_shadow_color="@android:color/holo_blue_bright"
            android:layout_marginLeft="10dp"
            android:layout_margin="10dp" />

        <TextView
            android:text="Nama Lengkap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="43dp"
            android:id="@+id/NamaProfil"
            android:layout_marginRight="60dp"
            android:layout_marginEnd="20dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textSize="20sp" />

        <TextView
            android:text="Jabatan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/NamaProfil"
            android:layout_alignLeft="@+id/NamaProfil"
            android:layout_alignStart="@+id/NamaProfil"
            android:layout_marginTop="5dp"
            android:id="@+id/JabatanProfil"
            android:textSize="18sp" />

        <TextView
            android:text="KANTOR WILAYAH"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/JabatanProfil"
            android:layout_alignLeft="@+id/JabatanProfil"
            android:layout_alignStart="@+id/JabatanProfil"
            android:layout_marginTop="5dp"
            android:id="@+id/kantorProfil"
            android:textSize="17sp"
            android:textColor="@android:color/holo_blue_bright" />

    </RelativeLayout>

</FrameLayout>
