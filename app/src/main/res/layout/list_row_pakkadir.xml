<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="vertical"
    android:padding="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <TextView
            android:id="@+id/txtTitlePakkadir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_toLeftOf="@+id/isReadPemberitahuan"
            android:layout_toStartOf="@+id/isReadPemberitahuan"
            android:text="Title"
            android:textColor="@color/mynatoBlue"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtTanggalPakkadir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtTitlePakkadir"
            android:layout_marginLeft="15dp"
            android:layout_toLeftOf="@+id/isReadPemberitahuan"
            android:layout_toStartOf="@+id/isReadPemberitahuan"
            android:text="tanggal" />

        <ImageView
            android:id="@+id/isReadPemberitahuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            app:srcCompat="@android:drawable/ic_notification_overlay" />
    </RelativeLayout>
</android.support.v7.widget.CardView>