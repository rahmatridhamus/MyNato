<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="my.mynato.rahmatridham.mynato.CHOI.DetailFormPernyataan">

    <TextView
        android:id="@+id/textViewasik"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_margin="5dp"
        android:foregroundGravity="center"
        android:text="PERNYATAAN TAHUNAN MENGENAI BENTURAN KEPENTINGAN"
        android:textAlignment="center"
        android:textSize="19sp"
        android:textStyle="normal|bold" />

    <WebView
        android:id="@+id/webviewPernyataan"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/checkBox"
        android:layout_below="@+id/textViewasik" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonSummition"
        android:layout_alignBottom="@+id/buttonSummition"
        android:layout_alignStart="@+id/buttonSummition"
        android:layout_marginBottom="49dp"
        android:text="Saya Mengerti dan Menyetujui"
        android:textSize="14sp" />

    <Button
        android:id="@+id/buttonSummition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_margin="10dp"
        android:layout_marginBottom="8dp"
        android:background="@color/greenButton"
        android:text="Submit"
        android:textColor="@color/white"
        android:textStyle="bold" />

</RelativeLayout>
