<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_step3_tata_nilai"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.rahmatridham.mynato.StepCoCActivity.Step2Motivasi">
    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/stepbar"
        android:layout_height="40dp"
        android:layout_below="@+id/my_toolbar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/stepthree">

    </RelativeLayout>

    <CheckBox
        android:text="Kami telah melaksanakan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBox"
        android:layout_above="@+id/buttonLanjutkan"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/body"
        android:layout_height="match_parent"
        android:layout_below="@+id/stepbar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/checkBox">



        <RelativeLayout
            android:id="@+id/relTanil"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:background="@android:color/darker_gray"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
            <TextView
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tata Nilai"
                android:textStyle="normal|bold"
                android:textSize="18sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relayPertSebelumnyaski"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_below="@+id/relTanil"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

        </RelativeLayout>

        <RadioGroup
            android:id="@+id/radioTataNilai"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/relayPertSebelumnyaski">

        </RadioGroup>
    </RelativeLayout>

    <Button
        android:text="Lanjutkan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonLanjutkan"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
