<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_step1_visi_misi"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="my.mynato.rahmatridham.mynato.StepCoCActivity.Step1VisiMisi">

    <RelativeLayout
        android:id="@+id/stepbar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/stepthree">

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/kolomVisi"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/stepbar"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/relvisi"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@color/lighter_gray"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Tata Nilai"
                android:textSize="14sp"
                android:textStyle="normal|bold" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/eaaa"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/relvisi"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="false"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/border_notifbefore">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="7dp"
                android:layout_marginStart="7dp"
                app:srcCompat="@mipmap/check_circle" />

            <TextView
                android:id="@+id/strMotivSebelum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/imageView4"
                android:layout_toRightOf="@+id/imageView4"
                android:text="Pertemuan Sebelumnya: blablabla"
                android:textSize="10sp" />
        </RelativeLayout>

        <ScrollView
            android:id="@+id/scrollView3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/eaaa"
            android:layout_margin="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/descTitl"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingStart="5dp"
                    android:paddingTop="5dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/descCOnt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingStart="5dp"
                    android:paddingTop="5dp" />
            </LinearLayout>
        </ScrollView>

    </RelativeLayout>

    <Button
        android:id="@+id/buttonLanjutkan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="5dp"
        android:background="@color/greenButton"
        android:text="Lanjutkan"
        android:textColor="@color/white"
        android:textStyle="normal|bold" />

</RelativeLayout>
