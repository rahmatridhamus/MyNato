<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_step6_absensi"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.rahmatridham.mynato.StepCoCActivity.Step1VisiMisi">

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/stepbar"
        android:background="@drawable/stepsix"
        android:layout_height="40dp"
        android:layout_below="@+id/my_toolbar">

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/kolomDataKehadiran"
        android:layout_below="@+id/stepbar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_height="255dp">

        <RelativeLayout
            android:id="@+id/relDatdir"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:background="@android:color/darker_gray">
            <TextView
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Data Kehadiran"
                android:textStyle="normal|bold"
                android:textSize="18sp" />
        </RelativeLayout>

        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/checkAbsensi"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/relDatdir">

        </LinearLayout>

    </RelativeLayout>

    <Button
        android:text="Selesai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonSelesai"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingStart="5dp"
        android:paddingTop="5dp"
        android:layout_margin="5dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:id="@+id/kolomDokumentasi"
        android:layout_height="match_parent"
        android:layout_below="@+id/kolomDataKehadiran"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/buttonSelesai">

        <RelativeLayout
            android:id="@+id/relTanil"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:background="@android:color/darker_gray">
            <TextView
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dokumentasi Kehadiran"
                android:textStyle="normal|bold"
                android:textSize="18sp" />

        </RelativeLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp">
                <ImageView
                    android:id="@+id/fotocuy"
                    android:layout_width="140dp"
                    android:layout_height="70dp"
                    android:src="@drawable/icon_coc_kamis" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Foto Absen"
                    android:id="@+id/textView3"
                    android:layout_below="@+id/fotocuy"
                    android:layout_centerHorizontal="true" />
            </RelativeLayout>

            <RelativeLayout
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp">
                <ImageView
                    android:id="@+id/fotocuys"
                    android:layout_width="140dp"
                    android:layout_height="70dp"
                    android:src="@drawable/icon_coc_kamis" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Foto Pegawai"
                    android:id="@+id/textView"
                    android:layout_below="@+id/fotocuys"
                    android:layout_centerHorizontal="true" />
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
