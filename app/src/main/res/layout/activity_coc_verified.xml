<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_coc_senin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="my.mynato.rahmatridham.mynato.StepCoCActivity.CocVerified">

    <RelativeLayout
        android:id="@+id/relaycoc"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/cover">

        <TextView
            android:id="@+id/kontenCocHari"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignWithParentIfMissing="false"
            android:layout_centerInParent="false"
            android:text="Konten CoC"
            android:textColor="@color/cardview_light_background"
            android:textSize="18sp"
            android:textStyle="normal|bold"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

    <RadioGroup
        android:id="@+id/radioTipecoc"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/buttonSelanjutnya"
        android:layout_below="@+id/relaycoc"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:padding="5dp" />

    <Button
        android:id="@+id/buttonSelanjutnya"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="5dp"
        android:background="@color/biruButton"
        android:text="selanjutnya"
        android:textColor="@color/cardview_light_background" />

</RelativeLayout>
