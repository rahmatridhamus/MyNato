<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_coc_senin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.rahmatridham.mynato.StepCoCActivity.CocVerified">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/relaycoc"
        android:background="@drawable/cover">

        <TextView
            android:text="Tata Nilai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="76dp"
            android:id="@+id/textView4tatanilai"
            android:textColor="@color/cardview_light_background" />

        <TextView
            android:text="Do and Dont"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="94dp"
            android:id="@+id/textView7doanddont"
            android:textColor="@color/cardview_light_background" />

        <TextView
            android:text="Visi dan Misi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3visidanmisi"
            android:textSize="14sp"
            android:layout_alignBottom="@+id/textView4tatanilai"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="22dp"
            android:textColor="@color/cardview_light_background" />

        <TextView
            android:text="Konten CoC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/kontenCocHari"
            android:textStyle="normal|bold"
            android:textSize="18sp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="19dp"
            android:textColor="@color/cardview_light_background" />

        <TextView
            android:text="Kontrak Manajemen / RUPTL / RJPP / RKAP / Kebijakan Bidang Teknik, Operasi dan Pembangkit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView8topik"
            android:textAlignment="center"
            android:layout_below="@+id/textView7doanddont"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="@color/cardview_light_background" />

    </RelativeLayout>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/relaycoc"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:id="@+id/radioTipecoc"
        android:layout_above="@+id/buttonSelanjutnya"
        android:padding="5dp" />

    <Button
        android:text="selanjutnya"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonSelanjutnya"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/colorPrimaryDarkBlue"
        android:textColor="@color/cardview_light_background"
        android:layout_margin="5dp" />

</RelativeLayout>
