<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_step2_motivasi"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.rahmatridham.mynato.StepCoCActivity.Step2Motivasi">
    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/stepbar"
        android:layout_below="@+id/my_toolbar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/steptwo"
        android:layout_height="40dp">

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/body"
        android:layout_below="@+id/stepbar"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/relvisi"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:background="@android:color/darker_gray">
            <TextView
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cerita Motivasi"
                android:textStyle="normal|bold"
                android:textSize="18sp" />
        </RelativeLayout>


        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:id="@+id/listCardMotivasi"
            android:layout_height="330dp">



        </android.support.v7.widget.RecyclerView>

    </LinearLayout>

    <CheckBox
        android:text="Kami Telah Melaksanakan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/checkBoxVisi"
        android:layout_above="@+id/buttonLanjutkan" />

    <Button
        android:text="Lanjutkan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonLanjutkan"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="5dp" />

</RelativeLayout>
